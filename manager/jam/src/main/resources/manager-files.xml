<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- ########################################## file management ########################## -->

    <bean id="zipUtils" class="org.yes.cart.utils.impl.ZipUtils">
        <constructor-arg index="0" value="${fs.config.bulkimport.ziputils.filename.encoding}"/>
    </bean>

    <bean id="fsImpexFileManager" class="org.yes.cart.remote.service.impl.FSFileManagerImpl">
        <constructor-arg index="0" ref="bulkImportService"/>
        <constructor-arg index="1" ref="bulkExportService"/>
        <constructor-arg index="2" value="${fs.config.download.absolute.paths.csv}"/>
    </bean>

    <!-- ################################ Register module  ####################################################### -->

    <bean class="org.yes.cart.env.impl.ModuleImpl">
        <property name="functionalArea" value="app"/>
        <property name="name" value="jam"/>
        <property name="subName" value="manager-files"/>
    </bean>

</beans>
        
