  <bean id="jwtAuthorisationFilter" class="org.yes.cart.security.impl.JWTAuthorisationFilter">
    <property name="systemService" ref="systemService"/>
    <property name="secretKey" value="MANAGER_JWT_SECRET"/>
    <property name="expiryKey" value="MANAGER_JWT_EXPIRY_MIN"/>
  </bean>

  <bean id="jwtAuthenticationFilter" class="org.yes.cart.security.impl.JWTAuthenticationFilter">
    <property name="authenticationManager" ref="authenticationManager"/>
    <property name="systemService" ref="systemService"/>
    <property name="secretKey" value="MANAGER_JWT_SECRET"/>
    <property name="expiryKey" value="MANAGER_JWT_EXPIRY_MIN"/>
  </bean>

  <bean id="changePasswordFilter" class="org.yes.cart.security.impl.ChangePasswordFilter">
    <property name="authenticationManager" ref="authenticationManager"/>
    <property name="managementService" ref="userManagementService"/>
  </bean>

  <bean id="logoutFilter" class="org.yes.cart.security.impl.LogoutFilter"/>

  <bean id="restAwareExceptionTranslationFilter" class="org.yes.cart.security.impl.RestAwareExceptionTranslationFilter">
      <constructor-arg value="/client/index.html"/>
  </bean>

  <bean id="sacFilter" class="org.yes.cart.web.filter.SecurityAccessControlFilter">
    <property name="allowKey" value="httpSecurityAccessControlService"/>
  </bean>

  <security:http auto-config="true" use-expressions="true" create-session="stateless">

    <security:csrf disabled="true"/>
    <security:anonymous enabled="false"/>

    <security:custom-filter ref="logoutFilter" before="LOGOUT_FILTER"/>
    <security:custom-filter ref="changePasswordFilter" before="FIRST"/>
    <security:custom-filter ref="jwtAuthenticationFilter" before="FORM_LOGIN_FILTER"/>
    <security:custom-filter ref="jwtAuthorisationFilter" after="FORM_LOGIN_FILTER"/>
    <security:custom-filter ref="restAwareExceptionTranslationFilter" after="EXCEPTION_TRANSLATION_FILTER"/>

    <security:http-basic />
