<import-descriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.yes-cart.org/schema/import-descriptor.xsd">

    <entity-type>org.yes.cart.domain.entity.SkuWarehouse</entity-type>

    <import-file-descriptor>
        <file-encoding>UTF-8</file-encoding>
        <file-name-mask>skuinventory(.*).csv(.*)</file-name-mask>
        <ignore-first-line>true</ignore-first-line>
        <column-delimiter>;</column-delimiter>
        <text-qualifier>&quot;</text-qualifier>
    </import-file-descriptor>

    <select-sql>select s from SkuWarehouseEntity s where s.skuCode = {skuCode} and s.warehouse.code = {warehouse}</select-sql>

    <import-columns>

        <column-descriptor>
            <column-index>-1</column-index>
            <field-type>FIELD</field-type>
            <name/>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <column-descriptor>
            <column-index>0</column-index>
            <field-type>FIELD</field-type>
            <name>skuCode</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>


        <column-descriptor>
            <column-index>1</column-index>
            <field-type>FK_FIELD</field-type>
            <entity-type>org.yes.cart.domain.entity.Warehouse</entity-type>
            <name>warehouse</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
            <lookup-query>select w from WarehouseEntity w where w.code = {warehouse}</lookup-query>
        </column-descriptor>


        <column-descriptor>
            <column-index>2</column-index>
            <field-type>FIELD</field-type>
            <data-type>DECIMAL</data-type>
            <name>quantity</name>
        </column-descriptor>

        <!-- availability type -->
        <column-descriptor>
            <column-index>3</column-index>
            <field-type>FIELD</field-type>
            <data-type>INT</data-type>
            <name>availability</name>
        </column-descriptor>

        <column-descriptor>
            <column-index>4</column-index>
            <field-type>FIELD</field-type>
            <data-type>DATETIME</data-type>
            <name>availablefrom</name>
            <data-type>INT</data-type>
        </column-descriptor>

        <column-descriptor>
            <column-index>5</column-index>
            <field-type>FIELD</field-type>
            <data-type>DATETIME</data-type>
            <name>availableto</name>
        </column-descriptor>

        <column-descriptor>
            <column-index>6</column-index>
            <field-type>FIELD</field-type>
            <data-type>DATETIME</data-type>
            <name>releaseDate</name>
        </column-descriptor>

        <!--featured-->
        <column-descriptor>
            <column-index>7</column-index>
            <field-type>FIELD</field-type>
            <data-type>BOOLEAN</data-type>
            <name>featured</name>
        </column-descriptor>

    </import-columns>
</import-descriptor>