    </bean>

    <bean id="productTypeExportFederationFilter" class="org.yes.cart.service.federation.impl.SimpleRoleBasedImpexFederationFilterImpl">
        <constructor-arg index="0" ref="shopFederationStrategy"/>
        <constructor-arg index="1">
            <list>
