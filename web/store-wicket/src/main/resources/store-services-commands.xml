<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:core-services-commands.xml"/>

    <!-- ############################# Shopping Cart SF Commands ######################### -->

    <bean id="changeLocaleCmdSF" class="org.yes.cart.shoppingcart.impl.WicketChangeLocaleCartCommandImpl">
        <constructor-arg index="0" ref="shoppingCartCommandFactory"/>
        <constructor-arg index="1" ref="languageService"/>
        <property name="priority" value="2"/>
    </bean>

    <bean id="loginCmdSF" class="org.yes.cart.shoppingcart.impl.WicketLoginCommandImpl">
        <constructor-arg index="0" ref="shoppingCartCommandFactory"/>
        <constructor-arg index="1" ref="customerResolver"/>
        <constructor-arg index="2" ref="shopService"/>
        <constructor-arg index="3" ref="priceResolver"/>
        <constructor-arg index="4" ref="pricingPolicyProvider"/>
        <constructor-arg index="5" ref="productService"/>
        <constructor-arg index="6" ref="cartRepository"/>
        <property name="priority" value="10"/>
    </bean>

    <bean id="cleanCartCmdSF" class="org.yes.cart.shoppingcart.impl.WicketCleanCartCommandImpl">
        <constructor-arg index="0" ref="shoppingCartCommandFactory"/>
        <constructor-arg index="1" ref="cartRepository"/>
        <property name="priority" value="100"/>
    </bean>

    <bean id="logoutCmdSF" class="org.yes.cart.shoppingcart.impl.WicketLogoutCommandImpl">
        <constructor-arg index="0" ref="shoppingCartCommandFactory"/>
        <property name="priority" value="101"/>
    </bean>

    <!-- ################################ Register module  ####################################################### -->

    <bean class="org.yes.cart.env.impl.ModuleImpl">
        <property name="functionalArea" value="app"/>
        <property name="name" value="store-wicket"/>
        <property name="subName" value="store-services-commands"/>
    </bean>

</beans>